# Database Configuration
ALLOYDB_CONNECTION_URI=postgresql+asyncpg://user:password@host:5432/database

# Google Cloud Services
GEMINI_API_KEY=your-gemini-api-key
GCS_BUCKET_NAME=garbage-pics
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp_creds.json

# Firebase Cloud Messaging (for push notifications)
# Note: Uses same service account as GOOGLE_APPLICATION_CREDENTIALS
# Ensure service account has "Cloud Messaging API" permissions in GCP Console

# Application Settings
DEBUG=False
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=False
