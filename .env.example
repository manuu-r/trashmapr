# ===========================
# Backend API Configuration
# ===========================
API_URL="https://your-api-domain.com/api/v1"

# ===========================
# Database Configuration
# ===========================
ALLOYDB_CONNECTION_URI="postgresql+asyncpg://db_user:db_password@db_host:5432/db_name"
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_ECHO=True

# ===========================
# Google Cloud Platform
# ===========================
# GCP Project Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=your-gcp-region
GCP_REPO=your-artifact-registry-repo
COMMIT_HASH=latest

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID="your-oauth-client-id.apps.googleusercontent.com"
GOOGLE_OAUTH_CLIENT_SECRET="GOCSPX-your-oauth-client-secret"
OAUTH_REDIRECT_URI="http://localhost:8000/auth/callback"

# Google Cloud Services
GOOGLE_APPLICATION_CREDENTIALS=gcp_creds.json
GEMINI_API_KEY="AIzaSy-your-gemini-api-key"
GCS_BUCKET_NAME=your-gcs-bucket-name

# ===========================
# Application Security
# ===========================
SECRET_KEY="your-secret-key-here-minimum-32-characters"
CORS_ORIGINS=["*"]

# ===========================
# Cloudflare Tunnel
# ===========================
TUNNEL_TOKEN="your-cloudflare-tunnel-token"

# ===========================
# Development Settings
# ===========================
DEBUG=False
NODE_ENV=development
